<!-- 3 recent -->
<p class="mt-5">Recent Posts: </p>
<div class="flex">
  <% const lastThreePosts = posts.slice(0, 3); %>
  <% lastThreePosts.forEach((post) => { %>
    <div class="bg-neutral-100 border-1 border-black relative text-center rounded-lg m-3 text-slate-300">
      <img height="300px" width="400px" src="<%= post.coverImage %>" alt="cover-image">
      <span class="p-1 absolute top-2 left-2 bg-neutral-200 text-black rounded-full flex items-center bg-opacity-80">
        <img src="/public/images/3201463-200.webp" width="25px" height="25px" alt="">
        <p class="m-1 "><%= post.date.toLocaleDateString() %></p>
      </span>
      <p class="post-topic"><%= post.title %></p>
      <br>
      <span><a class="p-5 border-2 border-black m-auto rounded-lg read-more-btn " href="/blog/<%= post.filename %>">Read More</a></span>
    </div>
  <% }); %>
</div>
